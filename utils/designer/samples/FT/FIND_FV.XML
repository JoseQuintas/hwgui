i:=0
iVal:= VAL(iif(xBT==1,iPm,iPa))

do while ++i<=nUD
 FV := nA*(1+iVal/100)^(nUD-i+1)
 PV := nA*(1-iVal/100)^(i-1)
 aadd(aData,{i,;
            nA,;
            iVal,;
            FV-Na,;
            FV,;
            PV,;
            aSum[3]+FV,;
            aSum[4]+PV})

