INC_DIR = include
OBJ_DIR = obj
LIB_DIR = lib
SRC_DIR = source
PROCMISC_DIR = source\procmisc
HBXML_DIR    = source\xml
HWGQHTM_DIR  = source\qhtm

CFLAGS = -Wall -mno-cygwin -O3 -march=pentium

all: \
   $(LIB_DIR)/libhwgui.a \
   $(LIB_DIR)/libprocmisc.a \
   $(LIB_DIR)/libhbxml.a \
   $(LIB_DIR)/libhwg_qhtm.a

