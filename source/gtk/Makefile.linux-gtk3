# $Id$
# Building of libhwgui.a - Harbour Linux (GTK) GUI library
# This version for GTK3

ifeq ($(HB_ROOT),)
HRB_BIN = /usr/local/bin
HRB_INC = /usr/local/include/harbour
HRB_LIB = /usr/local/lib/harbour
else
HRB_BIN = $(HB_ROOT)/bin/linux/gcc
HRB_INC = $(HB_ROOT)/include
HRB_LIB = $(HB_ROOT)/lib/linux/gcc
endif

INC_DIR = ../../include
OBJ_DIR = ../../obj
LIB_DIR = ../../lib

PROCMISC_DIR=../common/procmisc
XML_DIR=../common/xml
DEBUG_DIR=../common/debug
EDITOR_DIR=../common/editor
CROSS_DIR=../cross
SRC_DIR=./

CFLAGS = -Wall -Wunused -Wno-deprecated-declarations -O3
HB_FLAGS = -d__LINUX__ -w3 -es2

vpath %.a $(LIB_DIR)
vpath %.o $(OBJ_DIR)
vpath %.c $(OBJ_DIR):$(PROCMISC_DIR):$(XML_DIR):$(DEBUG_DIR):$(EDITOR_DIR):$(SRC_DIR)
vpath %.prg $(PROCMISC_DIR):$(XML_DIR):$(DEBUG_DIR):$(EDITOR_DIR):$(SRC_DIR):$(CROSS_DIR)

$(OBJ_DIR)/%.c : %.prg
	$(HRB_BIN)/harbour -n -q -w -es2 $(HB_FLAGS) -I$(HRB_INC) -I$(INC_DIR) -o$@ $<

%.o : %.c
	gcc $(CFLAGS) -c -I./ -I$(INC_DIR) -I$(HRB_INC) `pkg-config --cflags gtk+-3.0` -o $@ $<

$(OBJ_DIR)/%.o : %.c
	gcc $(CFLAGS) -c -I./ -I$(INC_DIR) -I$(HRB_INC) `pkg-config --cflags gtk+-3.0` -o $@ $<


$(LIB_DIR)/%.a ::
	ar rc $@ $^

